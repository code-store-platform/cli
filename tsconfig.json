{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "codestore-utils": [
        "node_modules/codestore-utils/src"
      ]
    },
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "target": "es2017",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "config/*"
  ]
}
